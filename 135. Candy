https://leetcode.com/problems/candy/


class Solution {
public:
    int candy(vector<int>& arr) {
        int n = arr.size();
        vector<int> ci(n,0),cj(n,0);
        int prev = 0;
        for(int i=0 ; i<n ; i++){
            if(i==0){
                ci[i]+=1;
                prev = 1;
            }
            else{
                if(arr[i]>arr[i-1]){
                    ci[i]+=prev+1;
                    prev++;
                }
                else{
                    ci[i]+=1;
                    prev = 1;
                }
            }
        }
        for(int j=n-1 ; j>=0 ; j--){
            if(j==n-1){
                cj[j]+=1;
                prev = 1;
            }
            else{
                if(arr[j]>arr[j+1]){
                    cj[j]+=prev+1;
                    prev++;
                }
                else{
                    cj[j]+=1;
                    prev = 1;
                }
            }
        }
        int ans = 0;
        for(int i=0 ; i<n ; i++){
            ans += max(ci[i],cj[i]);
        }
        return ans;
    }
};
